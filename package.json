{
  "name": "@collinbrewer/react-file-input-button",
  "version": "0.0.1",
  "description": "A styleable file input for react",
  "main": "lib/ReactFileInputButton.js",
  "scripts": {
    "clean": "rimraf lib",
    "copy": "copyfiles -f ./src/styles/react-navigation-view.css ./lib",
    "build_old": "npm run copy & babel --source-map inline -d lib/ src/",
    "prebuild": "npm run clean",
    "build": "npm run copy & webpack --env=lib",
    "build:watch": "webpack --watch --env=lib",
    "examples": "gulp dev:server",
    "lint": "eslint ./src",
    "publish:site": "NODE_ENV=production gulp publish:examples",
    "release:major": "npm version major && npm publish && git push --follow-tags",
    "release:minor": "npm version minor && npm publish && git push --follow-tags",
    "release:patch": "npm version patch && npm publish && git push --follow-tags",
    "serve": "node server.js --env=dev",
    "serve:lib": "node server.js --env=lib",
    "start": "npm run serve",
    "test": "karma start --single-run",
    "test:watch": "karma start"
  },
  "keywords": [
    "react",
    "file",
    "input"
  ],
  "author": "Collin Brewer <collin@brewer-collective.com>",
  "license": "ISC",
  "repository": "https://github.com/collinbrewer/react-file-input-button.git",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "chai": "^3.5.0",
    "copyfiles": "^1.0.0",
    "enzyme": "^2.4.1",
    "eslint": "^2.13.1",
    "eslint-config-happiness": "^5.3.1",
    "eslint-plugin-promise": "^1.3.2",
    "eslint-plugin-react": "^6.2.0",
    "eslint-plugin-standard": "^1.3.3",
    "karma": "^1.2.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "mocha": "^3.0.2",
    "react": "^15.3.1",
    "react-addons-test-utils": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-hot-loader": "^1.3.0",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.0"
  },
  "peerDependencies": {
    "react": ">= 0.14.0"
  }
}
